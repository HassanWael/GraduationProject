@model LSS.Models.LSS_DB_Model.Lecturer

@{    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<div class="loginForm">

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-groupe">
            @Html.TextBoxFor(m => m.ID, "", new { @class = "form-control", @placeholder = "ID Number", @tabindex = "1", @id = "ID_LoginForm" })
            @Html.LabelFor(m => m.ID, new { @class = "form-lable" })
        </div>

        <div class="form-groupe">
            @Html.LabelFor(m => m.Password, new { @class = "form-lable" })
            @Html.TextBoxFor(m => m.Password, "", new { @class = "form-control", @placeholder = "ID Number", @tabindex = "1", @id = "ID_LoginForm" })

        </div>

        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
    }


</div>