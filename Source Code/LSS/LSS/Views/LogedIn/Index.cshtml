@using LSS.Models
@using LSS.Models.CoursesModelView

@model LSS.Models.CoursesModelView.HomeCourseListViewModel
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
<style>
    h6, a, a:hover {
        color: #fff;
        padding-left:10px;
    }
        
   

</style>
<h2 class="text-center" style="margin:15px">Classes</h2>

<div id="Coordinated_Courses" class="Course_ShowCase">

    @if (Model.CoordinatedCourses != null)
    {
        foreach (CourseCoordinator cc in Model.CoordinatedCourses)
        {
          
            <div class="col-sm-3">
                <h2>@Html.ActionLink(cc.Course.Title, "CouresPage", "CourseCoordinator", new { courseID = cc.Course.ID }, null)</h2>
                <h2>@Html.Display(cc.Course.Title)</h2>
            </div>
        }
        
        }
        else
        {
        <h2> Noo courses have been added yet.</h2>
    }

</div>


@if (Model.DepartmentCCs != null)
{
    <div id="dptCdourses" class="Course_ShowCase">
      
            @foreach (CourseCoordinator cc in Model.DepartmentCCs)
            {
                
                <div class="col-sm-3">
                    <h2>@Html.ActionLink(cc.Course.Title, "CouresPage", "CourseCoordinator", new { courseID = cc.Course.ID }, null)</h2>
                    <h2>@Html.Display(cc.Course.Title)</h2>
                </div>
            }
       
    </div>
}

@if (Model.FacultyCCS != null)
{
<div id="dptCdourses" class="Course_ShowCase">

    @foreach (CourseCoordinator cc in Model.FacultyCCS)
    {
        <div class="col-sm-3" style="border-left:15px solid #5f8751;opacity: 0.9;  background-color:#343a40;padding:1px;">
            <h5 style="">@Html.ActionLink(cc.Course.Title, "CouresPage", "CourseCoordinator", new { courseID = cc.Course.ID }, null)</h5>
            <h6>@cc.Course.ID</h6>
        </div>
     }

</div>
}
