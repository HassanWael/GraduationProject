@using LSS.Models
@using LSS.Models.CoursesModelView

@model LSS.Models.CoursesModelView.HomeCourseListViewModel
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

<h2>Classes</h2>

<div id="Coordinated_Courses" class="Course_ShowCase">

    @if (Model.CoordinatedCourses != null)
    {<ul>
            @foreach (CourseCoordinator cc in Model.CoordinatedCourses)
            {
                <li> @Html.ActionLink(cc.Course.Title, "CouresPage", "CourseCoordinator", new { courseID = cc.Course.ID }, null) </li>

            }
        </ul>
    }
    else
    {
        <h2> Noo courses have been added yet.</h2>
    }

</div>


@if (Model.DepartmentCCs != null)
{
    <div id="dptCdourses" class="Course_ShowCase">
        <ul>
            @foreach (CourseCoordinator cc in Model.DepartmentCCs)
            {
                <li>@Html.ActionLink(cc.Course.Title, "CouresPage", "CourseCoordinator", new { courseID = cc.Course.ID }, null)  </li>
            }
        </ul>
    </div>
}

@if (Model.FacultyCCS != null)
{
    <div id="dptCdourses" class="Course_ShowCase">
        <ul>
            @foreach (CourseCoordinator cc in Model.FacultyCCS)
            {
                <li> @Html.ActionLink(cc.Course.Title, "CouresPage", "CourseCoordinator", new { courseID = cc.Course.ID }, null)  </li>
            }
        </ul>
    </div>
}
