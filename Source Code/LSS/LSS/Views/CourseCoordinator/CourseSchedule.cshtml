@model IEnumerable<LSS.Models.Schedule>
@using LSS.Models
@{
    ViewBag.Title = "CourseSchedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/bootstrap")






<body>
    <div class="row">
        <div class="col-2 mt-lg-5">
            <div class="list-group list-group-flush w-50">
                <h4 class="text-primary text-decoration-none" style="color:black !important"> <b>Content</b> </h4>
                @Html.ActionLink("Recomandations for improving the course", "ActionsForImproving", "CourseCoordinator",
               new { ViewBag.courseID }, new { @class = "bg-transparent pb-3" })

                @Html.ActionLink("Students List", "CourseStudentList", "Students",
               new { ViewBag.courseID, ViewBag.Year, ViewBag.Semester },
               new { @class = "bg-transparent pb-3" })

                @Html.ActionLink("Survey", "CourseAssessmentSurvey", "CourseCoordinator",
               new { ViewBag.courseID, ViewBag.Year, ViewBag.Semester },
               new { @class = "bg-transparent pb-3" })

                @Html.ActionLink("Exams & Tasks", "ListCourseExamsAndTasks", "Exam",
               new { ViewBag.courseID, ViewBag.Year, ViewBag.Semester },
               new { @class = "bg-transparent pb-3" })


                @Html.ActionLink("schedule", "CourseSchedule", "CourseCoordinator",
               new { ViewBag.courseID, ViewBag.Year, ViewBag.Semester },
               new { @class = "bg-transparent pb-3 text-success" })



                <br />
                <h4 class="text-primary text-decoration-none" style="color:black !important"> <b>Forms</b> </h4>
                @Html.ActionLink("Coures Syllabus", "CourseSyllabus", "Forms", new { ViewBag.courseID, ViewBag.Year, ViewBag.Semester }, new { @class = "bg-transparent pb-3" })
                @Html.ActionLink("Course File Checklist", "CourseFileChecklist", "Forms", new { ViewBag.courseID, ViewBag.Year, ViewBag.Semester }, new { @class = "bg-transparent pb-3" })
                @Html.ActionLink("Course Information Form", "CourseInformationForm", "Forms", new { ViewBag.courseID, ViewBag.Year, ViewBag.Semester }, new { @class = "bg-transparent pb-3" })
                @Html.ActionLink("Coures Report", "CourseReport", "Forms", new { ViewBag.courseID, ViewBag.Year, ViewBag.Semester }, new { @class = "bg-transparent pb-3" })
            </div>
        </div>

        <div class="col-lg-8">
            <div class="container shadow-lg p-3 mb-3 mt-5 align-content-center bg-white">
                <div class="d-flex justify-content-center align-items-center text-center">
                    <div>
                        <img src="~/Images/LOGO-removebg-preview.png" class="brand_logo" alt="Logo" style="height:150px; width:120px;" />
                        <h3>Course Schedule </h3>
                    </div>
                </div>

                <hr class="border-danger w-75" />
                <h2 class="text-center">CourseSchedule</h2>

                <table class="table table-responsive-lg table-hover table-borderless">
                    <tr class="border-bottom border-primary">
                        <th>
                            @Html.DisplayNameFor(model => model.WeekNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Topic)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Assignments)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Reference)
                        </th>
                        <th>

                            @Html.DisplayNameFor(model => model.CLOes)
                        </th>
                        <th></th>
                    </tr>




                    @foreach (Schedule item in Model)
                    {
                        string s = "Week_" + item.WeekNumber;
                        <tr>
                            <td>
                                Week:  @Html.DisplayFor(modelItem => item.WeekNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Topic)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Assignments)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Reference)
                            </td>
                            <td>
                                @foreach (CLO clo in item.CLOes)
                                {
                                    <span>@clo.Description <br /> </span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary" style="margin:4%" id="open" data-toggle="modal" data-target="#@s">Edit</a>
                                <div id="@s" class="modal fade" tabindex="-1" role="dialog">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            @{
                                                Html.RenderPartial("EditWeek", item);
                                            }
                                        </div>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</body>