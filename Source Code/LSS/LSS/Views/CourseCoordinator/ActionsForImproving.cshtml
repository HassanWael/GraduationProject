@model IEnumerable<LSS.Models.ActionsForImprovingTheCourse>

@{
    ViewBag.Title = "ActionsForImproving";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ActionsForImproving</h2>

<p>
    @Html.ActionLink("Create New", "Create",new { courseId=ViewBag.courseId })
</p>
<table class="table">
    <tr>
           <th>
            @Html.DisplayNameFor(model => model.CourseCoordinator.Lecturer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionsTaken)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionsResults)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecomandedActions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonResponsible)
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CourseCoordinator.Lecturer.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ActionsTaken)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ActionsResults)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RecomandedActions)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PersonResponsible)
    </td>

    <td>
        @Html.ActionLink("Details", "ActionsForImprovingDetails", new {  CourseID=item.CourseID, Year=item.Year,Semester=item.Semseter  }) |
