
@model LSS.Models.DepartmentViewModel.AddSLOMV
@using LSS.Models

@using (Html.BeginForm("AddSLO", "HeadOfDepartment", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>SLO</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.SLO.DeptID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SLO.DeptID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.SLO.DeptID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SLO.SLOID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SLO.SLOID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SLO.SLOID, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.SLO.Desc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SLO.Desc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SLO.Desc, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(" Select all PEO to MAP to this SLO")


        <ul style="list-style-type:none; flex:auto">
            @foreach (PEO peo in Model.PEOs)
            {
                <li>
                    <input type="checkbox" id="PEOID" name="PEOID" value="@peo.ID" checked="@Model.SLO.SLO_PEO.Select(x => x.PEOID).Contains(peo.ID)" /> <b style="padding-bottom:2%; margin-bottom:2%">@peo.ID</b>
                </li>
            }
        </ul>


    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add SLO" class="btn btn-primary" />
            @Html.ActionLink("Cancel", "Index")

        </div>
    </div>
</div>
}
