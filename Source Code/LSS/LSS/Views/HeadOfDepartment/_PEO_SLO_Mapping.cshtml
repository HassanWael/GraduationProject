@model LSS.Models.DepartmentViewModel.MappedPEO_SLO
@using LSS.Models

<html>
<body>
    <div>
        <h3>there is @Model.unmappedPEO.Count()  unmapped PEO</h3>

        <div id="ViewUnMapped" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    @{
                        Html.RenderPartial("_ViewUnmappedPEO",Model);

                    }
                </div>
            </div>
        </div>
        <button id='open' data-toggle="modal" data-target="#ViewUnMapped">open modal</button>

    </div>


    @    if (Model != null) {
    <table>
        <tr>
            <td>
            </td>
            @for (int i = 0; i < Model.PEOs.Count(); i++)
            {
                <td> @Model.PEOs[i].ID</td>
            }
        </tr>
        @for (int i = 0; i < Model.SLOes.Count(); i++)
        {
            <tr>
                <td>
                    @Model.SLOes[i].SLOID
                </td>
                @for (int j = 0; j < Model.PEOs.Count(); j++)
                {
                    <td>
                        @Html.CheckBox("", Model.Mapping[j, i], new { disabled = "true" })
                    </td>
                }

            </tr>
        }

    </table>
    }
</body>
</html>