@model IEnumerable<LSS.Models.CourseExamQuestion>
@using LSS.Models.Exams;
<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                Avarge
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @{ double AVG = item.getAVG(); }
       
                    <label> @AVG</label>
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditQustions", new QustionsVM() { Question=item}) |
                    @Html.ActionLink("Delete", "DeleteQustions", new { id = item.ID })
                </td>
            </tr>
        }

    </table>

</div>
