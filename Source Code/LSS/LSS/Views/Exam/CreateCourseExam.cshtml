@model LSS.Models.CourseExam

@{
    ViewBag.Title = "CreateCourseExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateCourseExam</h2>

@using (Html.BeginForm("CreateCourseExam", "Exam", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CourseExam</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.CourseID)
        @Html.HiddenFor(model => model.Year)
        @Html.HiddenFor(model => model.semester)

        <div class="form-group">
            @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Moderator, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Moderator, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Moderator, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p> Exam Weight</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExamWeight, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExamWeight, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Exam Duration</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExamDurationTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExamDurationTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Moderation Date </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ModerationDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ModerationDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Exam Date</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExamDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExamDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdditionalComments, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdditionalComments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdditionalComments, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}