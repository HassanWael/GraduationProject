
@model LSS.Models.Exams.QustionsVM
@using LSS.Models
@{
    ViewBag.Title = "CreateQustion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateQustion</h2>

@using (Html.BeginForm("EditQustions", "Exam", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container shadow-lg p-3 mb-3 mt-5 align-content-center bg-white">
        <div class="d-flex justify-content-center">
            <div>
                <img src="~/Images/LOGO-removebg-preview.png" class="brand_logo" alt="Logo" style="height:150px; width:120px;" />
                <h4>Edite Questions</h4>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Question.ExamID)






        <div class="text-center align-content-center justify-content-center d-flex">
            <div class="card border-primary w-50">
                <div class="card-header">Lecturer Info</div>
                <div class="card-body">

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Question number:</span>
                        </div>
                        @Html.EditorFor(model => model.Question.QuestionNumber, new { htmlAttributes = new { @class = "form-control" } }) <span>example "Q1a"</span>
                        @Html.ValidationMessageFor(model => model.Question.QuestionNumber, "", new { @class = "text-danger" })
                    </div>


                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Question:</span>
                        </div>
                        @Html.TextAreaFor(model => model.Question.Question, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Question.Question, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Weight:</span>
                        </div>
                        @Html.EditorFor(model => model.Question.Weight, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Question.Weight, "", new { @class = "text-danger" })
                    </div>



                    @foreach (PI pi in Model.PIs)
                    {
                        <input type="checkbox" id="PI_ID" name="PI_ID" value="@pi.PIUniqueID" /> <b style="padding-bottom:2%; margin-bottom:2%">@pi.ID</b>
                    }
                </div>
            </div>
        </div>
        <div class="form-group mt-2">
            <div>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}