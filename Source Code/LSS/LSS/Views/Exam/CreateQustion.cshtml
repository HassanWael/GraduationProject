@model LSS.Models.Exams.QustionsVM
@using LSS.Models
@{
    ViewBag.Title = "CreateQustion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateQustion</h2>

@using (Html.BeginForm("CreateQustion", "Exam",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>CourseExamQuestion</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Question.ExamID)
    <div class="form-group">
        @Html.LabelFor(model => model.Question.QuestionNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Question.QuestionNumber, new { htmlAttributes = new { @class = "form-control" } }) <span>example "Q1a"</span>
            @Html.ValidationMessageFor(model => model.Question.QuestionNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Question.Question, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Question.Question, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Question.Question, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Question.Weight, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Question.Weight, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Question.Weight, "", new { @class = "text-danger" })
        </div>
    </div>

    @foreach (PI pi in Model.PIs)
    {
        <input type="checkbox" id="PI_ID" name="PI_ID" value="@pi.PIUniqueID"/> <b style="padding-bottom:2%; margin-bottom:2%">@pi.ID</b>
    }



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
