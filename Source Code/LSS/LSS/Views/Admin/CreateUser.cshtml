@model LSS.Models.Lecturer
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@{
    ViewBag.Title = "CreatUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

@using (Html.BeginForm("CreateUser", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container shadow-lg p-3 mb-3 mt-5 bg-white">
        <div class="d-flex justify-content-center align-items-center text-center mb-3">
            <div>
                <img src="~/Images/LOGO-removebg-preview.png" class="brand_logo" alt="Logo" style="height:150px; width:120px;" />
                <h4> Create Lecturer </h4>
            </div>
        </div>


        <hr class="border-danger w-75 mb-4" />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="text-center align-content-center justify-content-center d-flex">
            <div class="card border-primary w-50">
                <div class="card-header">Lecturer Info</div>
                <div class="card-body">

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">ID:</span>
                        </div>
                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control col-12" } })
                        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Name:</span>
                        </div>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-12" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>


                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Role:</span>
                        </div>
                        @Html.DropDownListFor(model => model.Role, new SelectList(ViewBag.role, "Key", "Value"), "Select Role", new { @class = "form-control col-12" })
                        @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                    </div>


                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Office Number:</span>
                        </div>
                        @Html.EditorFor(model => model.OfficeNo, new { htmlAttributes = new { @class = "form-control col-10" } })
                        @Html.ValidationMessageFor(model => model.OfficeNo, "", new { @class = "text-danger" })
                    </div>


                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Email:</span>
                        </div>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-12" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Password:</span>
                        </div>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-12" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Department:</span>
                        </div>
                        @Html.DropDownListFor(model => model.dptId, new SelectList(ViewBag.dept, "ID", "Name"), "Select Department", new { @class = "form-control col-12" })
                        @Html.ValidationMessageFor(model => model.dptId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>



        <div class="mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}