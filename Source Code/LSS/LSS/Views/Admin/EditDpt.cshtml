@model LSS.Models.Department
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@{
    ViewBag.Title = "EditDpt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

@using (Html.BeginForm("EditDpt", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()<div class="container shadow-lg p-3 mb-3 mt-5 bg-white">
        <div class="d-flex justify-content-center align-items-center text-center mb-3">
            <div>
                <img src="~/Images/LOGO-removebg-preview.png" class="brand_logo" alt="Logo" style="height:150px; width:120px;" />

                @if (Model != null)
                {
                    <h4> Edit Department </h4>
                }
                else
                {
                    <h4> Creat Department </h4>
                }
            </div>
        </div>

        <hr class="border-danger w-75 mb-4" />


      

        <div class="text-center align-content-center justify-content-center d-flex">
            <div class="card border-primary">
                <div class="card-header">Department</div>
                <div class="card-body">

                    @if (Model==null)
                    {

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-default">ID</span>
                            </div>
                            @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                        </div>
                    }
                    else
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                    }

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Name:</span>
                        </div>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>


                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Faculty</span>
                        </div>
                        @Html.DropDownListFor(model => model.FacultyId, new SelectList(ViewBag.faculty, "ID", "Name"),"Select Faculty", new { @class = "form-control col-10" })
                        @Html.ValidationMessageFor(model => model.FacultyId, "", new { @class = "text-danger" })
                    </div>

                    @if (ViewBag.Lecturer != null)
                    {
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-default">Head OF Department:</span>
                            </div>
                            @Html.DropDownListFor(model => model.HeadOFDepartment, new SelectList(ViewBag.Lecturer, "ID", "Name"), "Select Head OF Department ", new { @class = "form-control col-10" })
                            @Html.ValidationMessageFor(model => model.HeadOFDepartment, "", new { @class = "text-danger" })
                        </div>
                    }
                </div>
            </div>
        </div>



        <div class="form-group">
            <div class="mt-3">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

        </div>
    </div>
}