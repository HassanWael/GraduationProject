@model LSS.Models.Course
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<header>
    @{
        ViewBag.Title = "CreateCourse";
        Layout = "~/Views/Shared/_Layout.cshtml";

    }

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

</header>


@using (Html.BeginForm("CreateCourse", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container shadow-lg p-3 mb-3 mt-5 bg-white">
        <div class="d-flex justify-content-center align-items-center text-center mb-3">
            <div>
                <img src="~/Images/LOGO-removebg-preview.png" class="brand_logo" alt="Logo" style="height:150px; width:120px;" />
                <h4> Create Course </h4>
            </div>
        </div>

        <hr class="border-danger w-75 mb-4" />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="justify-content-center align-content-center d-flex text-primary">
            <div class="card border-primary w-50 m-1">
                <div class="card-header">Main Course Information</div>
                <div class="card-body">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">ID</span>
                        </div>
                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control col-12" } })
                        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Title</span>
                        </div>
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control col-12" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Department</span>
                        </div>
                        @Html.DropDownListFor(model => model.dptid, new SelectList(ViewBag.dept, "ID", "Name"), new { @class = "form-control col-10" })
                        @Html.ValidationMessageFor(model => model.dptid, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Pre-Requisite</span>
                        </div>
                        @Html.EditorFor(model => model.pre_requisite, new { htmlAttributes = new { @class = "form-control col-10" } })
                        @Html.ValidationMessageFor(model => model.pre_requisite, "", new { @class = "text-danger" })
                    </div>


                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Co-Requisite</span>
                        </div>
                        @Html.EditorFor(model => model.co_requisite, new { htmlAttributes = new { @class = "form-control col-10" } })
                        @Html.ValidationMessageFor(model => model.co_requisite, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Credit Hours</span>
                        </div>
                        @Html.EditorFor(model => model.Hours, new { htmlAttributes = new { @class = "form-control col-10" } })
                        @Html.ValidationMessageFor(model => model.Hours, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <br />




            <div class="card border-primary w-50 m-1">
                <div class="card-header">Other Course Information</div>
                <div class="card-body">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Designation</span>
                        </div>
                        @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control col-10" } })
                        @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">VClass URL</span>
                        </div> 
                        @Html.EditorFor(model => model.VclassURL, new { htmlAttributes = new { @class = "form-control col-10" } })
                        @Html.ValidationMessageFor(model => model.VclassURL, "", new { @class = "text-danger" })
                    </div>


                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Description</span>
                        </div>
                        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Online Resources</span>
                        </div>
                        @Html.TextAreaFor(model => model.Other_Online_resources, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Other_Online_resources, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Required Material</span>
                        </div>
                        @Html.TextAreaFor(model => model.Other_Required_Material, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Other_Required_Material, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>



        <div class="form-group mt-2 ml-1">
            <div>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


