@model LSS.Models.Student

@{
    ViewBag.Title = "UpdateStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{


    @Html.AntiForgeryToken()

    <div class="container shadow-lg p-3 mb-3 mt-5 bg-white">
        <div class="d-flex justify-content-center align-items-center text-center mb-3">
            <div>
                <img src="~/Images/LOGO-removebg-preview.png" class="brand_logo" alt="Logo" style="height:150px; width:120px;" />
                <h4> Update Students </h4>
            </div>
        </div>

        <hr class="border-danger w-75 mb-4" />

        <div class="card border-primary mb-3 w-50 text-left">
            <div class="card-header">Student: </div>

            <div class="card-body text-primary">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Name:</span>
                    </div>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-11" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Department Id:</span>
                    </div>
                    @Html.DropDownListFor(x => x.DptID, new SelectList(ViewBag.Departments, "ID", "ID"), htmlAttributes: new { @class = "form-control col-md-10" })
                    @Html.ValidationMessageFor(model => model.DptID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
       

        <div class="form-group ">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" style="width:15%" />
            </div>


            <div class="float-right mr-2">
                @Html.ActionLink("Back", "ListStudents")
            </div>
        </div>
    </div>
}